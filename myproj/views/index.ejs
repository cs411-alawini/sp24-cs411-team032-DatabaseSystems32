<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add User</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <h2>Please enter your username and password below</h2>
        <form action="mark" method="POST">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control col-lg-9" id="username" placeholder="Enter Username" name="username">
            <label for="password">Password</label>
            <input type="text" class="form-control col-lg-9" id="password" placeholder="Enter Password" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <!-- Button to Load Attendance -->
        <button type="button" class="btn btn-info mt-3" id="loadUsersBtn" data-toggle="modal" data-target="#viewUserModal">
          View Users
        </button>
      </div>
    </div>
 
    <!-- Modal for Viewing Attendance -->
    <div class="modal fade" id="viewUserModal" tabindex="-1" role="dialog" aria-labelledby="viewUserModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="viewUserModalLabel">User Records</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Username</th>
                  <th scope="col">Password</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody id="attendanceBody">
                <!-- Attendance rows will be inserted here -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
  $(document).ready(function() {
    $('#loadUsersBtn').click(function() {
      $.ajax({
        url: '/api/attendance',
        method: 'GET',
        success: function(data) {
          var rows = '';
          data.forEach(function(attendance, index) {
            rows += `<tr>
                       <th scope="row">${index + 1}</th>
                       <td>${attendance.username}</td>
                       <td>${attendance.password}</td>
                       <td>
                         <button class="btn btn-warning btn-sm" data-username="${attendance.username}">Modify</button>
                         <button class="btn btn-danger btn-sm" data-username="${attendance.username}">Delete</button>
                       </td>
                     </tr>`;
          });
          $('#attendanceBody').html(rows);
        },
        error: function() {
          alert('Failed to load attendance data.');
        }
      });
    });
  });

$(document).on('click', '.btn-warning', function() {
        var username = $(this).data('username');
        $.ajax({
            url: '/api/attendance/modify/' + username,
            type: 'POST',
            data: {
                new_username: 'new_username_value'
            },
            success: function(response) {
                alert('Attendance modified successfully for Username: ' + username);
                location.reload();
            },
            error: function() {
                alert('Error modifying attendance for Username: ' + username);
            }
        });
    });

    $(document).on('click', '.btn-danger', function() {
        var username = $(this).data('username');
        if(confirm('Are you sure you want to delete attendance for Username: ' + username + '?')) {
            $.ajax({
                url: '/api/attendance/delete/' + username,
                type: 'DELETE',
                success: function(response) {
                    alert('Attendance deleted successfully for Username: ' + username);
                    location.reload();
                },
                error: function() {
                    alert('Error deleting attendance for Username: ' + username);
                }
            });
        }
    });
  </script>
</body>
</html>